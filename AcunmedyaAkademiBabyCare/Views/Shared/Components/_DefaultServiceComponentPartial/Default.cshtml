@model List<AcunmedyaAkademiBabyCare.Entities.Service>
<div class="container-fluid service py-5">
    <div class="container py-5">
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
            <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Hizmetlerimiz</h4>
            <h4 class="mb-5 display-3">Çocuklarımız için güvenli, eğitici ve sevgi dolu bir ortam sunuyoruz.</h4>
        </div>
        <div class="row g-5">
            @foreach(var item in Model)
            {
            <div class="col-md-6 col-lg-6 col-xl-3 wow fadeIn" data-wow-delay="0.1s">
                <div class="text-center border-primary border bg-white service-item">
                    <div class="service-content d-flex align-items-center justify-content-center p-4">
                        <div class="service-content-inner">
                            <div class="p-4"><i class="@item.IconUrl"></i></div>
                            <a href="#" class="h4">@item.Title</a>
                            <p class="my-3">
                                @item.Description
                            </p>
                            <a href="#" class="btn btn-primary text-white px-4 py-2 my-2 btn-border-radius">Daha Fazlası İçin</a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>