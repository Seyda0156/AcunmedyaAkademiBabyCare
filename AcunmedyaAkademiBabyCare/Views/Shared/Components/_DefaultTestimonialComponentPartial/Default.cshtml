@model List<AcunmedyaAkademiBabyCare.Entities.Testimonial>
<div class="container-fluid testimonial py-5">
    <div class="container py-5">
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
            <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Yorumlar</h4>
            <h1 class="mb-5 display-3">Ebeveynler Hakkımızda Ne Diyor?</h1>
        </div>
        <div class="owl-carousel testimonial-carousel wow fadeIn" data-wow-delay="0.3s">
            @foreach(var item in Model)
            {
            <div class="testimonial-item img-border-radius bg-light border border-primary p-4">
                <div class="p-4 position-relative">
                    <i class="fa fa-quote-right fa-2x text-primary position-absolute" style="top: 15px; right: 15px;"></i>
                    <div class="d-flex align-items-center">
                        <div class="border border-primary bg-white rounded-circle">
                            <img src="@item.ImgUrl" class="rounded-circle p-2" style="width: 80px; height: 80px; border-style: dotted; border-color: var(--bs-primary);" alt="">
                        </div>
                        <div class="ms-4">
                            <h4 class="text-dark">@item.NameSurname</h4>
                            <p class="m-0 pb-3">@item.TimeUsed</p>
                                <div class="d-flex pe-5">
                                    @if (item.Like >= 1 && item.Like <= 5)
                                    {
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= item.Like)
                                            {
                                                <i class="fas fa-star text-primary"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-primary"></i>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Değerlendirme Yok</span>
                                    }
                                </div>
                        </div>
                    </div>
                    <div class="border-top border-primary mt-4 pt-3">
                        <p class="mb-0">@item.Description
                        </p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>