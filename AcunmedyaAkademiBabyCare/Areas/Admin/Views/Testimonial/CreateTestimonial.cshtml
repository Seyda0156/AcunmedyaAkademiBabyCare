@model Testimonial
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminDefault/Index.cshtml";
}

<h1>Yorum Ekleme Sayfası</h1>

<form method="post">
    <label>Ad Soyad</label>
    <input type="text" asp-for="NameSurname" class="form-control" />
    <span asp-validation-for="NameSurname" class="text-danger"></span>

    <br />
    <label>Kullanılan Süre</label>
    <input type="text" asp-for="TimeUsed" class="form-control" />
    <span asp-validation-for="TimeUsed" class="text-danger"></span>

    <br />
    <label>Beğeni</label>
    <input type="text" asp-for="Like" class="form-control" />
    <span asp-validation-for="Like" class="text-danger"></span>

    <br />
    <label>Açıklama</label>
    <textarea rows="4" asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>

    <br />
    <label>Resim</label>
    <input type="text" asp-for="ImgUrl" class="form-control" />
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>
