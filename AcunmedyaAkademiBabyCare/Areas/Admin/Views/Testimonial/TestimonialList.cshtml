@model List<Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Areas/Admin/Views/AdminDefault/Index.cshtml";
    int count = 0;
}

<div class="card-header">
    <div class="card-title">Hizmetler</div>
</div>
<div class="card-body">
    <div class="card-sub">
        Hizmetlerle ilgili işlemleri buradan yapabilirsiniz.


    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ad Soyad</th>
                <th scope="col">Kullanıcı Süresi</th>
                <th scope="col">Beğeni</th>
                <th scope="col">Açıklama</th>
                <th scope="col">Resim</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.NameSurname</td>
                    <td>@item.TimeUsed</td>
                    <td>@item.Like</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImgUrl" style="height:75px; width:75px"></td>
                    <td><a onclick="deleteTestimonial(@item.TestimonialId)" class="btn btn-warning">Sil</a></td>
                    <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>

                </tr>
            }



        </tbody>
    </table>
    <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-primary">Yeni Yorum Ekleme</a>
    <script>
        function deleteTestimonial(id) {
            Swal.fire({
                title: "Silmek istediğine emin misiniz?",
                text: "Bu işlemi geri alamazsınız!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, Sil!",
                cancelButtonText:"İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/Testimonial/DeleteTestimonial/" + id;
                }
            });

        }
    </script>
</div>

