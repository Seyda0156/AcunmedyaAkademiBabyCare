@model Class
@{
    ViewData["Title"] = "CreateClass";
    Layout = "~/Areas/Admin/Views/AdminDefault/Index.cshtml";
}

<form method="post">
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>

    <br />
    <label>Açıklama</label>
    <textarea rows="4" asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>

    <br />
    <label>Resim</label>
    <input type="text" asp-for="ImgUrl" class="form-control" />
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>

    <br />
    <label>Öğrenci Sayısı</label>
    <input type="text" asp-for="StudentCount" class="form-control" />
    <span asp-validation-for="StudentCount" class="text-danger"></span>

    <br />
    <label>Ders Sayısı</label>
    <input type="text" asp-for="LessonCount" class="form-control" />
    <span asp-validation-for="LessonCount" class="text-danger"></span>

    <br />
    <label>Ders Saati</label>
    <input type="text" asp-for="ClassTime" class="form-control" />
    <span asp-validation-for="ClassTime" class="text-danger"></span>

    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>

