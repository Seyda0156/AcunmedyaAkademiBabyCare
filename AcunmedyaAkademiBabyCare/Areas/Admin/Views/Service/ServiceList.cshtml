@model List<Service>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Areas/Admin/Views/AdminDefault/Index.cshtml";
    int count = 0;
}
<div class="card-header">
    <div class="card-title">Hizmetler</div>
</div>
<div class="card-body">
    <div class="card-sub">
        Hizmetlerle ilgili işlemleri buradan yapabilirsiniz.


    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Başlık</th>
                <th scope="col">Açıklama</th>
                <th scope="col">İkon</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><a onclick="deleteService(@item.ServiceId)" class="btn btn-warning">Sil</a></td>
                    <td><a href="/Admin/Service/UpdateService/@item.ServiceId" class="btn btn-success">Güncelle</a></td>

                </tr>
            }



        </tbody>
    </table>
    <a href="/Admin/Service/CreateService/" class="btn btn-primary">Yeni Hizmet Ekleme</a>
    <script>
        function deleteService(id) {
            Swal.fire({
                title: "Silmek istediğine emin misiniz?",
                text: "Bu işlemi geri alamazsınız!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, Sil!",
                cancelButtonText:"İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/Service/DeleteService/" + id;
                }
            });

        }
    </script>
</div>

