@model List<AcunmedyaAkademiBabyCare.Entities.Branch>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminDefault/Index.cshtml";
    int count = 0;
}

<div class="card-header">
    <div class="card-title">Branşlar</div>
</div>
<div class="card-body">
    <div class="card-sub">
       Branşlarla ilgili işlemleri buradan yapabilirsiniz.
        
        
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Branş Adı</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.BranchName</td>
                    <td><a onclick="deleteBranch(@item.BranchId)" class="btn btn-warning">Sil</a></td>
                    <td><a href="/Admin/Branch/UpdateBranch/@item.BranchId" class="btn btn-success">Güncelle</a></td>

                </tr>
            }
            
           
           
        </tbody>
    </table>
    <a href="/Admin/Branch/CreateBranch/" class="btn btn-primary">Yeni Branş Girişi</a>
    <script>
        function deleteBranch(id) {
            Swal.fire({
                title: "Silmek istediğine emin misiniz?",
                text: "Bu işlemi geri alamazsınız!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, Sil!",
                cancelButtonText:"İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/Branch/DeleteBranch/" + id;
                }
            });

        }
    </script>
    </div>